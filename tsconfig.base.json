{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@medi-supply/source"],
    "baseUrl": ".",
    "paths": {
      "@medi-supply/config-env": ["libs/config-env/src/index.ts"],
      "@medi-supply/database": ["libs/database/src/index.ts"],
      "@medi-supply/shared": ["libs/shared/src/index.ts"]
    },
    "rootDir": "."
  }
}
